<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/layout_root"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:padding="6dp">
   <TextView android:id="@+id/label_symbolic_loc_name"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"/>
   <EditText android:id="@+id/symbolic_loc_name"
             android:layout_width="fill_parent"
             android:layout_height="wrap_content"/>
   <LinearLayout
	  android:layout_width="fill_parent"
	  android:layout_height="wrap_content"
	  android:orientation="horizontal"
	  android:paddingTop="6dp">	
		   <TextView android:id="@+id/label_loc_xCoord"
		             android:layout_width="wrap_content"
		             android:layout_height="wrap_content"/>
		   <EditText android:id="@+id/loc_xCoord"
		             android:layout_width="wrap_content"
		             android:layout_height="wrap_content"/>
	 	   
	 	   <TextView android:id="@+id/label_loc_yCoord"
		             android:layout_width="wrap_content"
		             android:layout_height="wrap_content"/>
		   <EditText android:id="@+id/loc_yCoord"
		             android:layout_width="wrap_content"
		             android:layout_height="wrap_content"/>
	       
	       <TextView android:id="@+id/label_loc_zCoord"
		             android:layout_width="wrap_content"
		             android:layout_height="wrap_content"/>
		   <EditText android:id="@+id/loc_zCoord"
		             android:layout_width="wrap_content"
		             android:layout_height="wrap_content"/>
    </LinearLayout>
    
    <Button  android:id="@+id/learn_button"
             android:layout_width="fill_parent"
             android:layout_height="wrap_content"
             android:paddingTop="6dp"
             android:text="@string/menu_learn"/>
</LinearLayout>